.modal-header.bg-primary
  h6.modal-title.text-light Save password
  button.close(type="button", aria-label="Close", (click)="dismissModal()")
    span.text-light(aria-hidden="true") &times;
.modal-body((keyup.enter)="save()")
  .input-group.input-group-sm(
    appFocusWithin,
    [ngClass]="{'is-invalid': passwordName.invalid && (passwordName.dirty || passwordName.touched)}"
  )
    input.form-control.form-control-sm.description-field(
      type="text",
      title="Password name or description",
      placeholder="Password name or description",
      [formControl]="passwordName",
      autofocus
    )
    .input-group-append
      .input-group-text.btn-group-toggle.p-0
        label.btn.btn-sm.favorite(title="Mark as favorite")
          input(
            type="checkbox",
            [formControl]="favorite"
            #favoriteChk)
          div(*ngIf="favoriteChk.checked")
            i.fas.fa-star(alt="Mark as favorite", aria-hidden="true")
          div(*ngIf="!favoriteChk.checked")
            i.far.fa-star(alt="Mark as favorite", aria-hidden="true")
  .invalid-feedback.pl-2(*ngIf="passwordName.errors?.required && (passwordName.dirty || passwordName.touched)") Please type a name or description for your password
  .invalid-feedback.pl-2(*ngIf="passwordName.errors?.maxlength && (passwordName.dirty || passwordName.touched)") Please specify a name of no more than 50 chars.
  .invalid-feedback.pl-2(*ngIf="passwordName.errors?.duplicated && (passwordName.dirty || passwordName.touched)") Please type another name. This one already exists
  button(type="submit", style="display:none")
.modal-footer
  small Press ENTER to save or ESC to cancel
