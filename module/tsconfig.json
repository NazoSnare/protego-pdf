{
    "compilerOptions": {
        "target"                        : "es2015",
        "module"                        : "commonjs",
        "moduleResolution"              : "node",
        "removeComments"                : false,
        "noImplicitAny"                 : true,
        "sourceMap"                     : false,
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots"                     : [
            "./node_modules/@types/"
        ],
        "outDir": "./lib",
        "declaration": true
    },
    "compileOnSave": true,
    "include"      : [
        "src/typescript/**/*"
    ],
    "exclude": [
        "node_modules/*",
        "**/*-aot.ts",
        "e2e/"
    ]
}
